{% extends 'base_admin.html.twig' %}

{% block body %}
    <h1>Posts</h1>
    <a href="{{ path('post_create') }}" class="btn btn-sm btn-success">Criar Post</a>
    <hr>
    <table class="table">
        <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Criado em</th>
            <th>Autor</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.createdAt|date('d/m/Y H:i:s') }}</td>
                <td>{{ post.author.firstName }}</td>
                <td>
{#                    {% if is_granted('ROLE_ADMIN') %}#}
                    <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                    <a href="{{ path('post_delete', {'id': post.id}) }}" class="btn btn-sm btn-danger">Remover</a>
{#                    {% endif %}#}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block title %}
    Postagens
{% endblock %}